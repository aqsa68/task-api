// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(cuid())
  email      String      @unique
  password   String
  name       String?
  categories Category[]  // 1-to-many with Category
  tasks      Task[]      // 1-to-many with Task
}

model Category {
  id     String  @id @default(cuid())
  name   String
  userId String
  user   User    @relation(fields: [userId], references: [id])
  tasks  Task[]  // 1-to-many with Task
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   @default("pending") // or use enum
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
